<p id="notice"><%= notice %></p>

<h1>Prescriptions</h1>

<table>
  <thead>
    <tr>
      <th>Date</th>
      <th>Patient</th>
      <th>Doctor</th>
      <th>Presname</th>
      <th>Pres sym</th>
      <th>Pres obs</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @prescriptions.each do |prescription| %>
      <tr>
        <td><%= prescription.date %></td>
        <td><%= prescription.patient_id %></td>
        <td><%= prescription.doctor_id %></td>
        <td><%= prescription.presname %></td>
        <td><%= prescription.pres_sym %></td>
        <td><%= prescription.pres_obs %></td>
        <td><%= link_to 'Show', prescription %></td>
        <td><%= link_to 'Edit', edit_prescription_path(prescription) %></td>
        <td><%= link_to 'Destroy', prescription, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Prescription', new_prescription_path %>
