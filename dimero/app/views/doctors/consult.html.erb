<% if !notice.nil? %>
  <br>
  <div class="alert alert-warning alert-dismissible fade show" role="alert" id="notice">
    <strong>Alert!</strong> <%= notice %>
    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
      <span aria-hidden="true">&times;</span>
    </button>
  </div>
<%end %>
<br>
<div class="container" style="font-size: larger">
  <div class="jumbotron text-dark">
    <center>
      <div class="card" style="width:95%;">
        <div class="card-title" style="font-size: xx-large;"><br><b>Profile</b></div>
        <div class="card-body" align="left">

          <div class="container">
            <div class="row">
              <div class="col-xs-1 col-sm-1 col-md-1 col-lg-1"></div>
              <div class="col-xs-11 col-sm-11 col-md-11 col-lg-11">
                <p>
                  <strong>Name:</strong>
                  <%= @patient.name %>
                </p>

                <p>
                  <strong>Height:</strong>
                  <%= @patient.height %>
                </p>

                <p>
                  <strong>Weight:</strong>
                  <%= @patient.weight %>
                </p>

                <p>
                  <strong>Age:</strong>
                  <%= @patient.age %>
                </p>

                <p>
                  <strong>Bg:</strong>
                  <%= @patient.bg %>
                </p>

                <p>
                  <strong>Allergies:</strong>
                  <%= @patient.allergies %>
                </p>
              </div>
            </div>
          </div>

        </div>
        <div class="container">
          <div class="row">
            <div class="col-xs-3 col-sm-3 col-md-3 col-lg-3" style="text-align:center";>
              <%= link_to 'View Past Prescriptions', past_prescriptions_path(@patient) , :class =>"btn btn-lg btn-success col-md-11 col-sm-11 col-xs-11"%>
            </div>
            <div class="col-xs-3 col-sm-3 col-md-3 col-lg-3" style="text-align:center";>
              <%= link_to 'View Past Reports', past_reports_path(@patient) , :class =>"btn btn-lg btn-success col-md-11 col-sm-11 col-xs-11"%>
            </div>
            <div class="col-xs-3 col-sm-3 col-md-3 col-lg-3" style="text-align:center";>
              <%= link_to 'Add Prescription', new_prescription_path(@prescription) , :class =>"btn btn-lg btn-success col-md-11 col-sm-11 col-xs-11"%>
            </div>
            <div class="col-xs-3 col-sm-3 col-md-3 col-lg-3" style="text-align:center";>
              <%=link_to 'Back', doctors_login_path, :class =>"btn btn-lg btn-success col-md-11 col-sm-11 col-xs-11"%>        </div>
          </div>
        </div>
        <br>
      </div>
    </center>
  </div>
</div>
