<p id="notice"><%= notice %></p>
<div class="container">
  <div class="jumbotron text-dark">
    <center>
      <div class="card" style="width:95%;" align="left" >
        <div class="card-title" style="font-size: x-large;" align="center"><br><b>Reports</b></div>
        <div class="card-body">
          <table>
            <thead>
            <tr>
              <th>Date</th>
              <th>Pid</th>
              <th>Repname</th>
              <th>Rep</th>
              <th colspan="3"></th>
            </tr>
            </thead>

            <tbody>
            <% @reports.each do |report| %>
              <tr>
                <td><%= report.date %></td>
                <td><%= report.patient_id %></td>
                <td><%= report.repname %></td>
                <td><%= report.rep %></td>
                <td><%= link_to 'Show', report %></td>
                <td><%= link_to 'Edit', edit_report_path(report) %></td>
              </tr>
            <% end %>
            </tbody>
          </table>

          <br>

          <%= link_to 'New Report', new_report_path %>
        </div>
      </div>
    </center>
  </div>
</div>


